page {
  background-color: #161923;
}
.word {
  min-height: 100%;
}
.word .word__video {
  width: 100%;
  height: 422rpx;
}
.word .word__sentence {
  margin: 59rpx auto 92rpx;
  width: 82%;
  max-height: 286rpx;
}
.word .word__sentence--english {
  font-size: 39rpx;
  color: #fff;
  font-weight: Semibold;
}
.word .word__sentence--english .english__import {
  color: #fe2c55;
}
.word .word__sentence--chinese {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.6);
}
.word .word__import {
  margin: 0 auto 42rpx;
  width: 82%;
  color: #fff;
  display: flex;
  flex-direction: column;
}
.word .word__import .import__text {
  font-size: 64rpx;
  line-height: 90rpx;
}
.word .word__import .import__symbol {
  display: flex;
  align-items: center;
  font-size: 40rpx;
}
.word .word__import .import__explanation {
  font-size: 29rpx;
  color: rgba(255, 255, 255, 0.6);
}
.word .word__import image {
  width: 86rpx;
  height: 75rpx;
}
.word .word__remember {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 9%;
  color: #fe2c55;
  font-size: 28rpx;
  border: 1px solid #fe2c55;
  width: 156rpx;
  height: 60rpx;
  border-radius: 6rpx;
  vertical-align: middle;
}
.word .word__remember image {
  margin-right: 6rpx;
  height: 35rpx;
  width: 35rpx;
}
.word .word__tick {
  margin-left: 9%;
  width: 80rpx;
  height: 80rpx;
}
